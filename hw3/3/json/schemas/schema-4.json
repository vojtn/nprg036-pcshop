{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "schema-4.json",
    "title": "Warehouse Schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "description": {
            "type": "string"
        },
        "@context": {
            "$ref": "#/$defs/context"
        },
        "@graph": {
            "type": "array",
            "description": "List of warehouses",
            "items": {
                "$ref": "#/$defs/warehouse"
            }
        }
    },
    "required": [
        "@context",
        "@graph"
    ],
    "$defs": {
        "context": {
            "type": [
                "string",
                "object"
            ],
            "properties": {
                "ex": {
                    "type": "string"
                },
                "@base": {
                    "type": "string"
                },
                "rdf": {
                    "type": "string"
                },
                "rdfs": {
                    "type": "string"
                },
                "foaf": {
                    "type": "string"
                },
                "schema": {
                    "type": "string"
                },
                "dpv": {
                    "type": "string"
                },
                "iol": {
                    "type": "string"
                },
                "vcard": {
                    "type": "string"
                },
                "km4c": {
                    "type": "string"
                },
                "uiot": {
                    "type": "string"
                },
                "oo": {
                    "type": "string"
                },
                "seasto": {
                    "type": "string"
                },
                "xsd": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            },
            "required": [
                "ex",
                "@base",
                "rdf",
                "rdfs",
                "foaf",
                "schema",
                "dpv",
                "iol",
                "vcard",
                "km4c",
                "uiot",
                "oo",
                "seasto",
                "xsd",
                "type",
                "uri"
            ]
        },
        "valueWithLanguage": {
            "type": "object",
            "properties": {
                "@value": {
                    "type": "string",
                    "description": "The value of the property."
                },
                "@language": {
                    "type": "string",
                    "description": "The language tag of the value."
                }
            },
            "required": [
                "@value"
            ],
            "additionalProperties": false
        },
        "@id": {
            "type": "string",
            "format": "uri"
        },
        "warehouse": {
            "type": "object",
            "properties": {
                "@id": {
                    "$ref": "#/$defs/@id"
                },
                "@type": {
                    "const": "km4c:Warehouse_and_storage"
                },
                "capacity": {
                    "type": "integer"
                },
                "mbox": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "type": "string",
                        "format": "email"
                    }
                },
                "location": {
                    "$ref": "#/$defs/address"
                },
                "storedIn": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "$ref": "#/$defs/product"
                    }
                }
            },
            "required": [
                "@type",
                "capacity",
                "location",
                "storedIn"
            ]
        },
        "product": {
            "type": "object",
            "properties": {
                "@id": {
                    "$ref": "#/$defs/@id"
                },
                "@type": {
                    "const": "schema:Product"
                },
                "price": {
                    "type": "integer"
                },
                "name": {
                    "$ref": "#/$defs/valueWithLanguage"
                },
                "discount": {
                    "type": "integer"
                },
                "VAT": {
                    "type": "integer"
                },
                "brand": {
                    "$ref": "#/$defs/brand",
                    "minItems": 0,
                    "maxItems": 1,
                    "nullable": true
                }
            },
            "required": [
                "@type",
                "price",
                "name",
                "discount",
                "VAT"
            ]
        },
        "brand": {
            "type": "object",
            "properties": {
                "@id": {
                    "$ref": "#/$defs/@id"
                },
                "@type": {
                    "const": "schema:Brand"
                },
                "name": {
                    "$ref": "#/$defs/valueWithLanguage"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The email address for the brand."
                }
            },
            "required": [
                "@type",
                "name",
                "email"
            ]
        },
        "address": {
            "type": "object",
            "properties": {
                "@id": {
                    "$ref": "#/$defs/@id"
                },
                "@type": {
                    "const": "vcard:Address"
                },
                "countryName": {
                    "$ref": "#/$defs/valueWithLanguage"
                },
                "locality": {
                    "$ref": "#/$defs/valueWithLanguage"
                },
                "streetAddress": {
                    "$ref": "#/$defs/valueWithLanguage"
                },
                "postalCode": {
                    "$ref": "#/$defs/valueWithLanguage"
                }
            },
            "required": [
                "@type",
                "countryName",
                "locality",
                "streetAddress",
                "postalCode"
            ]
        }
    }
}